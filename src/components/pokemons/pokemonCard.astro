---
interface Props {
     url: string;
     name: string;
}
const {name, url} = Astro.props
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/${id}.png`
---
<div class="rounded flex flex-col justify-center items-center p-2 mt-5">
     <img src= {imageSrc}
     alt={name} />
     <span>{name}</span>
</div>